      "tissues": ["all"],
      "markers": ["CD14", "FCGR3A", "S100A8", "S100A9"],
      "subtypes": {
        "Classical monocyte": {"markers": ["CD14", "S100A8"], "description": "CD14+ monocyte"},
        "Non-classical monocyte": {"markers": ["FCGR3A", "CX3CR1"], "description": "CD16+ monocyte"},
        "Intermediate monocyte": {"markers": ["CD14", "FCGR3A"], "description": "Transitional"}
      }
    },
    
    "Dendritic cell": {
      "description": "Antigen-presenting cells",
      "tissues": ["all"],
      "markers": ["ITGAX", "HLA-DRA", "FLT3"],
      "subtypes": {
        "cDC1": {"markers": ["CLEC9A", "XCR1", "BATF3"], "description": "Cross-presenting DC"},
        "cDC2": {"markers": ["CD1C", "CLEC10A", "FCER1A"], "description": "CD1c+ DC"},
        "pDC": {"markers": ["IL3RA", "CLEC4C", "TCF4"], "description": "Plasmacytoid DC"},
        "Mature DC": {"markers": ["CCR7", "LAMP3"], "description": "Activated DC"}
