  "tissue_profiles": {
    "heart": {
      "description": "Cardiac tissue",
      "expected_types": [
        "Cardiomyocyte", "Fibroblast", "Endothelial cell", "Smooth muscle cell",
        "Macrophage", "T cell", "Mesothelial cell", "Adipocyte", "Neuron"
      ],
      "rare_types": ["B cell", "NK cell", "Dendritic cell", "Mast cell"]
    },
    "brain": {
      "description": "Neural tissue",
      "expected_types": [
        "Neuron", "Glial cell", "Endothelial cell", "Smooth muscle cell"
