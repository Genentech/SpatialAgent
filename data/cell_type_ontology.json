{
  "_metadata": {
    "version": "1.0",
    "description": "Hierarchical cell type ontology for spatial transcriptomics annotation",
    "usage": "Level 1 (broad) -> Level 2 (specific) annotation workflow"
  },
  
  "categories": {
    "Cardiomyocyte": {
      "description": "Heart muscle cells",
      "tissues": ["heart"],
      "markers": ["TNNT2", "MYH6", "MYH7", "ACTC1", "TTN"],
      "subtypes": {
        "Ventricular cardiomyocyte": {"markers": ["MYH7", "MYL2"], "description": "Ventricle muscle"},
        "Atrial cardiomyocyte": {"markers": ["MYH6", "MYL7", "NPPA"], "description": "Atrium muscle"},
        "Nodal cardiomyocyte": {"markers": ["HCN4", "TBX3"], "description": "Pacemaker cells"},
        "Purkinje fiber cell": {"markers": ["IRX3", "GJA5"], "description": "Conduction system"}
      }
    },
    
    "Fibroblast": {
      "description": "Connective tissue cells producing ECM",
      "tissues": ["heart", "lung", "skin", "liver", "kidney", "intestine"],
      "markers": ["COL1A1", "DCN", "LUM", "PDGFRA", "VIM"],
      "subtypes": {
        "Fibroblast": {"markers": ["COL1A1", "DCN"], "description": "General fibroblast"},
        "Myofibroblast": {"markers": ["ACTA2", "POSTN", "FAP"], "description": "Activated fibroblast"},
        "Cardiac fibroblast": {"markers": ["TCF21", "PDGFRA"], "description": "Heart-specific"},
        "Adventitial fibroblast": {"markers": ["PDGFRA", "PI16"], "description": "Vessel adventitia"}
      }
    },
    
    "Endothelial cell": {
      "description": "Blood and lymphatic vessel lining cells",
      "tissues": ["heart", "lung", "liver", "kidney", "brain", "intestine"],
      "markers": ["PECAM1", "CDH5", "VWF", "ERG"],
      "subtypes": {
        "Arterial endothelial cell": {"markers": ["GJA5", "DKK2", "EFNB2"], "description": "Artery lining"},
        "Venous endothelial cell": {"markers": ["NR2F2", "ACKR1"], "description": "Vein lining"},
        "Capillary endothelial cell": {"markers": ["CA4", "RGCC"], "description": "Capillary"},
        "Lymphatic endothelial cell": {"markers": ["PROX1", "LYVE1", "PDPN"], "description": "Lymphatics"},
        "Endocardial cell": {"markers": ["NPR3", "SMOC1"], "description": "Heart inner lining"}
      }
    },
    
    "Smooth muscle cell": {
      "description": "Smooth muscle in vessels and organs",
      "tissues": ["heart", "lung", "intestine", "uterus"],
      "markers": ["ACTA2", "MYH11", "TAGLN", "CNN1"],
      "subtypes": {
        "Vascular smooth muscle cell": {"markers": ["MYH11", "ACTA2"], "description": "Vessel wall"},
        "Visceral smooth muscle cell": {"markers": ["DES", "ACTG2"], "description": "Organ smooth muscle"},
        "Pericyte": {"markers": ["RGS5", "PDGFRB", "KCNJ8"], "description": "Vessel-associated"}
      }
    },
    
    "T cell": {
      "description": "Adaptive immune lymphocytes",
      "tissues": ["all"],
      "markers": ["CD3D", "CD3E", "CD3G", "TRAC"],
      "subtypes": {
        "CD4+ T cell": {"markers": ["CD4", "IL7R"], "description": "Helper T cell"},
        "CD8+ T cell": {"markers": ["CD8A", "CD8B"], "description": "Cytotoxic T cell"},
        "Regulatory T cell": {"markers": ["FOXP3", "IL2RA"], "description": "Treg"},
        "gamma-delta T cell": {"markers": ["TRDC", "TRGC1"], "description": "Innate-like T cell"},
        "NK T cell": {"markers": ["KLRB1", "CD3D"], "description": "Natural killer T cell"}
      }
    },
    
    "B cell": {
      "description": "Antibody-producing lymphocytes",
      "tissues": ["all"],
      "markers": ["CD19", "MS4A1", "CD79A", "CD79B"],
      "subtypes": {
        "Naive B cell": {"markers": ["IGHD", "FCER2"], "description": "Unstimulated B cell"},
        "Memory B cell": {"markers": ["CD27", "IGHG1"], "description": "Antigen-experienced"},
        "Plasma cell": {"markers": ["SDC1", "MZB1", "JCHAIN"], "description": "Antibody-secreting"},
        "Germinal center B cell": {"markers": ["BCL6", "AICDA"], "description": "GC B cell"}
      }
    },
    
    "NK cell": {
      "description": "Natural killer cells",
      "tissues": ["all"],
      "markers": ["NCAM1", "NKG7", "GNLY", "KLRD1"],
      "subtypes": {
        "CD56bright NK cell": {"markers": ["NCAM1", "SELL"], "description": "Cytokine-producing"},
        "CD56dim NK cell": {"markers": ["FCGR3A", "PRF1"], "description": "Cytotoxic NK"}
      }
    },
    
    "Macrophage": {
