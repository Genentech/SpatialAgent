        "Inflammatory macrophage": {"markers": ["IL1B", "TNF", "CCL2"], "description": "M1-like"},
        "Anti-inflammatory macrophage": {"markers": ["CD163", "MRC1", "TGFB1"], "description": "M2-like"},
        "Cardiac macrophage": {"markers": ["TIMD4", "LYVE1"], "description": "Heart-resident"}
      }
    },
    
    "Monocyte": {
