        "Oligodendrocyte": {"markers": ["MBP", "MOG", "OLIG2"], "description": "Myelin-forming"},
        "Microglia": {"markers": ["CX3CR1", "P2RY12", "TMEM119"], "description": "Brain macrophage"},
        "Schwann cell": {"markers": ["MPZ", "PMP22"], "description": "PNS glia"}
      }
    },
    
    "Epithelial cell": {
