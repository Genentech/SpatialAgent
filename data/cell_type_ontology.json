        "Alveolar type 1 cell": {"markers": ["AGER", "PDPN"], "description": "Gas exchange"},
        "Alveolar type 2 cell": {"markers": ["SFTPC", "SFTPB"], "description": "Surfactant-producing"},
        "Enterocyte": {"markers": ["FABP2", "APOA1"], "description": "Intestinal absorptive"},
        "Goblet cell": {"markers": ["MUC2", "TFF3"], "description": "Mucus-secreting"},
        "Hepatocyte": {"markers": ["ALB", "APOB", "CYP3A4"], "description": "Liver parenchyma"},
        "Cholangiocyte": {"markers": ["KRT19", "SOX9"], "description": "Bile duct"},
        "Podocyte": {"markers": ["NPHS1", "NPHS2", "WT1"], "description": "Kidney filtration"},
        "Tubular epithelial cell": {"markers": ["SLC12A1", "UMOD"], "description": "Kidney tubule"}
